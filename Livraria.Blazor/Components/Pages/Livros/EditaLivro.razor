@page "/editalivro/{id:int}"


<PageTitle>Editar Livro</PageTitle>

<div class="row justify-content-center">
    <div class="col-6">
        <LivroForm ModoEdicao="true" Id="@Id" OnValidaLivroSubmit="EditarLivro" />
    </div>
</div>

@code {
    [Parameter]
    public int Id { get; set; }


    private async Task EditarLivro(LivroDto livro)
    {
        await livroAlterarApplication.HandleAsync(livro);
        navigation.NavigateTo("/catalogolivros");
    }
}
