@page "/editaeditora/{id:int}"


<PageTitle>Editar Editora</PageTitle>

<div class="row justify-content-center">
    <div class="col-6">
        <EditoraForm ModoEdicao="true" Id="@Id" OnValidaEditoraSubmit="EditarEditora" />
    </div>
</div>

@code {
    [Parameter]
    public int Id { get; set; }


    private async Task EditarEditora(EditoraDto editora)
    {
        await editoraAlterarApplication.HandleAsync(editora);
        navigation.NavigateTo("/catalogoeditoras");
    }
}
